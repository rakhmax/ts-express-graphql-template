{
  "name": "ts-express-graphql-template",
  "version": "0.1.0",
  "description": "Starter temlate for node.js GraphQL API server",
  "main": "dist/app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/rakhmax/ts-express-graphql-template"
  },
  "author": "Maxim Rakhmanin",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpileOnly ./src/app.ts",
    "dev:debug": "ts-node-dev --respawn --inspect --transpileOnly ./src/app.ts",
    "build": "tsc && ncp ./src ./dist --filter=^[A-Za-z\\-/]*\\(\\.gql\\|$\\)",
    "serve": "export NODE_ENV=production && node ./dist/app.js",
    "prod": "yarn build && yarn serve"
  },
  "dependencies": {
    "@babel/runtime": "^7.5.5",
    "apollo-directives": "^1.0.4",
    "apollo-link-context": "^1.0.18",
    "apollo-server-express": "^2.8.1",
    "axios": "^0.19.0",
    "bcrypt": "^3.0.6",
    "compression": "^1.7.4",
    "connect-mongo": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "graphql": "^14.4.2",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^0.7.1",
    "graphql-import-node": "^0.0.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.13",
    "mongoose": "^5.7.5",
    "ncp": "^2.0.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.0.0",
    "@types/connect-mongo": "^0.0.42",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/graphql": "^14.2.3",
    "@types/graphql-depth-limit": "^1.1.0",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/lodash": "^4.14.134",
    "@types/mongodb": "^3.1.28",
    "@types/mongoose": "^5.5.6",
    "@types/node": "^12.7.1",
    "ts-node": "^8.3.0",
    "ts-node-dev": "^1.0.0-pre.40",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2"
  }
}
